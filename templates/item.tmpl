{{define "item"}}
<div class="item">
    <div>
    {{ template "splash" . }}
    <div class="description scroll">
    <pre class="">
        Name         : {{ .Name }}
        Cost (Base)  : {{ .Gold.Base }}
        Cost (Total) : {{ .Gold.Total }}
        Depth        : {{ .Depth }}
        Group        : {{ .Group }}
    </pre>
    <p>{{ .SanitizedDescription }}</p>
    </div>
    </div>
    <div class="half">
        {{ if len .IntoItems }}
            <div class="splashList">
                Into:
                {{ range .IntoItems  }}
                    {{template "splash" .}}
                {{end}}
            </div>
        {{end}}
        {{ if len .FromItems }}
            <div class="splashList">
                From:
                {{ range .FromItems }}
                    {{ template "splash" . }}
                {{end}}
            </div>
        {{end}}
    </div>
</div>
{{end}}
