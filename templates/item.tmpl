{{define "item"}}
<div class="item">
    {{ template "itemSplash" . }}
    {{ .SanitizedDescription }}
    <pre>
        Id:   {{ .Id }}
        Name: {{ .Name }}
        Cost: {{ .Gold.Total }}
        Map:  {{ .Map }}
        {{ . }}
    </pre>
    <div class="listItems">
        {{ if len .IntoItems }}
            Into:
            {{ range .IntoItems  }}
                {{template "itemSplash" .}}
            {{end}}
        {{end}}
    </div>

    <div class="listItems">
        {{ if len .FromItems }}
            From:
            {{ range .FromItems }}
                {{ template "itemSplash" . }}
            {{end}}
        {{end}}
    </div>
</div>
{{end}}
